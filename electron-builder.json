{
  "appId": "org.mspring.hexo.client",
  "productName": "HexoClient",
  "directories": {
    "output": "build"
  },
  "files": [
    "public/icons/*"
  ],
  "publish": {
    "provider": "github",
    "owner": "gaoyoubo",
    "repo": "hexo-client"
  },
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "mac": {
    "icon": "public/icons/icon.icns"
  },
  "win": {
    "target": "nsis",
    "icon": "public/icons/icon.ico"
  },
  "linux": {
    "category": "Utility",
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      {
        "target": "deb",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      {
        "target": "rpm",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "icon": "public/icons"
  }
}
